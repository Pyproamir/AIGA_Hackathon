<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ChoosingAuditory">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/sign_up_icon"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Who are you?"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">
            <ImageButton
                android:id="@+id/trainer_button"
                android:layout_width="125dp"
                android:layout_height="174dp"
                android:src="@drawable/ic_trainer"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Trainer"
                android:fontFamily="@font/poppins_extrabold"
                android:textSize="30sp"
                android:textColor="#CC000000"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="• Provide your CV.\n• Stable salary.\n• The account will be provided by the tech. admin."
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="#CC000000"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">

            <ImageButton
                android:id="@+id/client_button"
                android:layout_width="125dp"
                android:layout_height="174dp"
                android:src="@drawable/ic_client"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Client"
                android:fontFamily="@font/poppins_extrabold"
                android:textSize="30sp"
                android:textColor="#FF000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="• Independent registration from 14\n• Bonuses, individual training\n• Shop, tournament participation."
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="#FF000000"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/parent_button"
                android:layout_width="125dp"
                android:layout_height="174dp"
                android:src="@drawable/ic_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:fontFamily="@font/poppins_extrabold"
                android:textSize="30sp"
                android:textColor="#CC000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="• For parents and their kids\n• View children's progress\n• Full control access."
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="#CC000000"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/aiga_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="AIGA Academy Logo"
        android:src="@drawable/ic_aiga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>