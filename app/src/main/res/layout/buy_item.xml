<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="75dp"
        android:backgroundTint="@color/light_gray"
        android:layout_marginStart="25dp">
        <ImageButton
            android:id="@+id/ib_product_image"
            android:layout_width="145dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/product_example" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_product_name"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/app_name"
            android:textColor="@color/purple"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="AIGA Academy BJJ"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_product_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="$14.64"
            android:textColor="@color/purple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tx_product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Brand new"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="hightype 100% positive (411)"
            android:textColor="@color/purple"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tx_product_delivery"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="+5.20$ for deliver Located in Astana"
            android:textColor="@color/grey"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>