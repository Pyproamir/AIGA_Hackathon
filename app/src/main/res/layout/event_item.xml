<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_event"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almaty Konayev Jiu-Jitsu Cup"
                android:textColor="#1D1F24"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tx_event_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textColor="#DA0303"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:layout_marginStart="10sp"
                />

            <ImageButton
                android:id="@+id/ib_event_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_register"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/app_name"/>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>