<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="1500dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:minHeight="1500dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".client.ScheduleFragment"
        android:orientation="vertical">

        <TextView
            android:text="Schedule"
            style="@style/PageTitleStyle"/>

        <com.example.aiga_hackathon.client.drop_down_list.DropDownListView
            android:id="@+id/TrainingsDropDownListSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerText="Trainings"/>

        <com.example.aiga_hackathon.client.drop_down_list.DropDownListView
            android:id="@+id/CoachesDropDownListSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerText="Coaches"/>

        <com.example.aiga_hackathon.client.drop_down_list.DropDownListView
            android:id="@+id/LocationsDropDownListSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerText="Locations"/>

        <com.ak.KalendarView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:calendarBackground="#FFFFFF"
            android:minHeight="335dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0066FF"
            android:fontFamily="@font/poppins"
            android:textSize="18sp"
            android:text="Trainings available:"
            android:layout_marginLeft="13dp"/>

        <ListView
            android:id="@+id/AvailableTrainingListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>