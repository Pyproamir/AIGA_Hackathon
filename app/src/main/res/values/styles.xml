<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PageTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">9dp</item>
        <item name="android:background">#DA0303</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#F4F4F4</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ArrowIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="ProfileConstraintStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PersonalInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">start</item>

    </style>

    <style name="ArrowPersonalInfoIcon">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="PersonalInfoTextGreyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>